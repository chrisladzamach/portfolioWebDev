---
import GitHubIcon from '../icons/GitHubIcon.astro';

interface Props {
  title: string;
  description: string;
  image: string;
  technologies: string[];
  link: string;
}

const { title, description, image, technologies, link } = Astro.props;
---

<article class="bg-white rounded-xl shadow-md overflow-hidden hover:shadow-lg transition-shadow duration-200">
  <img
    src={image}
    alt={title}
    class="w-full h-48 object-cover hover:scale-105 transition duration-200 "
  />
  <div class="p-6">
    <h3 class="text-xl font-semibold mb-2">{title}</h3>
    <p class="text-gray-600 mb-4">{description}</p>
    <div class="flex flex-wrap gap-2 mb-4">
      {technologies.map((tech) => (
        <span class="bg-blue-100 text-primary text-sm px-3 py-1 rounded-full">
          {tech}
        </span>
      ))}
    </div>
    <a href={link} target="_blank" class="text-blue-500 font-semibold flex items-center gap-x-2">
      <GitHubIcon class="size-6 text-black" />
      View 
      <span class="text-zinc-800 hover:text-blue-500">
        {title}
      </span> 
      on GitHub
    </a>
  </div>
</article>
